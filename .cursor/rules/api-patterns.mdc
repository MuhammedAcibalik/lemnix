/**
 * Hook: Get optimization with dependent algorithm details
 */
export function useOptimizationWithAlgorithm(id: string) {
  // First query
  const { data: optimization } = useOptimizationResult(id);
  
  // Dependent query
  const { data: algorithm } = useQuery({
    queryKey: ['algorithm', optimization?.algorithm],
    queryFn: () => getAlgorithmDetails(optimization!.algorithm),
    enabled: !!optimization?.algorithm,
  });
  
  return { optimization, algorithm };
}
