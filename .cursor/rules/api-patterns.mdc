### Query Hooks
```typescript
/**
 * Hook: Get optimization result
 */
export function useOptimizationResult(id: string) {
  return useQuery({
    queryKey: optimizationKeys.result(id),
    queryFn: () => getOptimizationResult(id),
    enabled: !!id,
    staleTime: 5 * 60 * 1000, // 5 minutes
    gcTime: 10 * 60 * 1000,   // 10 minutes (formerly cacheTime)
    retry: (failureCount, error) => {
      // Don't retry 401s
      if ((error as any)?.response?.status === 401) {
        return false;
      }
      return failureCount < 3;
    },
  });
}

/**
 * Hook: List optimization history
 */
export function useOptimizationHistory(params: HistoryQueryParams) {
  return useQuery({
    queryKey: optimizationKeys.list(params),
    queryFn: () => getOptimizationHistory(params),
    staleTime: 1 * 60 * 1000, // 1 minute
    keepPreviousData: true, // For pagination
  });
}
```

### Mutation Hooks
```typescript
/**
 * Hook: Create optimization
 */
export function useCreateOptimization() {
  const queryClient = useQueryClient();
  
  return useMutation({
    mutationFn: createOptimization,
    onSuccess: (data) => {
      // Invalidate history list
      queryClient.invalidateQueries({ 
        queryKey: optimizationKeys.lists() 
      });
      
      // Set the new result in cache
      queryClient.setQueryData(
        optimizationKeys.result(data.id),
        data
      );
    },
    onError: (error) => {
      console.error('Failed to create optimization:', error);
    },
  });
}

/**
 * Hook: Delete optimization
 */
export function useDeleteOptimization() {
  const queryClient = useQueryClient();
  
  return useMutation({
    mutationFn: deleteOptimization,
    onSuccess: (_, id) => {
      // Remove from cache
      queryClient.removeQueries({ 
        queryKey: optimizationKeys.result(id) 
      });
      
      // Invalidate list
      queryClient.invalidateQueries({ 
        queryKey: optimizationKeys.lists() 
      });
    },
  });
}
```

### Optimistic Updates
```typescript
/**
 * Hook: Update optimization with optimistic update
 */
export function useUpdateOptimization() {
  const queryClient = useQueryClient();
  
  return useMutation({
    mutationFn: ({ id, data }: { id: string; data: Partial<OptimizationResult> }) =>
      updateOptimization(id, data),
    
    onMutate: async ({ id, data }) => {
      // Cancel outgoing refetches
      await queryClient.cancelQueries({ 
        queryKey: optimizationKeys.result(id) 
      });
      
      // Snapshot previous value
      const previous = queryClient.getQueryData(optimizationKeys.result(id));
      
      // Optimistically update
      queryClient.setQueryData(optimizationKeys.result(id), (old: OptimizationResult | undefined) =>
        old ? { ...old, ...data } : undefined
      );
      
      return { previous };
    },
    
    onError: (error, { id }, context) => {
      // Rollback on error
      if (context?.previous) {
        queryClient.setQueryData(optimizationKeys.result(id), context.previous);
      }
    },
    
    onSettled: (_, __, { id }) => {
      // Refetch to sync with server
      queryClient.invalidateQueries({ 
        queryKey: optimizationKeys.result(id) 
      });
    },
  });
}
```

## Pagination Pattern

```typescript
/**
 * Hook: Infinite query for optimization history
 */
export function useInfiniteOptimizationHistory(
  baseParams: Omit<HistoryQueryParams, 'page'>
) {
  return useInfiniteQuery({
    queryKey: [...optimizationKeys.lists(), baseParams] as const,
    queryFn: ({ pageParam = 1 }) =>
      getOptimizationHistory({ ...baseParams, page: pageParam }),
    getNextPageParam: (lastPage, allPages) => {
      // If last page has fewer items than pageSize, we're done
      if (lastPage.length < baseParams.pageSize) {
        return undefined;
      }
      return allPages.length + 1;
    },
    staleTime: 1 * 60 * 1000,
  });
}
```

