### React Query Polling
```typescript
// Critical metrics - 30 seconds
export function useDashboardMetrics() {
  return useQuery({
    queryKey: ['dashboard', 'metrics'],
    queryFn: getDashboardMetrics,
    staleTime: 20 * 1000,              // 20s
    refetchInterval: 30 * 1000,        // Auto-refresh 30s
    refetchIntervalInBackground: true, // Continue in background
    retry: (failureCount, error) => {
      if (error?.response?.status === 401) return false;
      return failureCount < 2;
    },
  });
}

// Activity feed - 1 minute
export function useRecentActivity(limit: number = 50) {
  return useQuery({
    queryKey: ['dashboard', 'activity', limit],
    queryFn: () => getRecentActivity(limit),
    staleTime: 30 * 1000,              // 30s
    refetchInterval: 60 * 1000,        // Auto-refresh 1min
    refetchIntervalInBackground: true,
  });
}
```

